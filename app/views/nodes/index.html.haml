#sidebar= render 'shared/node_manager_sidebar'
#main

  .header
    %h2.half
      - if action_name != 'index'
        = action_name.titleize.capitalize
        nodes
      - elsif params[:current] or params[:successful]
        = Node.label_for_currentness_and_successfulness(params[:current] == "true", params[:successful] == "true").capitalize
        nodes
      - elsif params[:disabled] == "true"
        Disabled Nodes
      - else
        Nodes
    = render 'search'
    %br.clear

  .item
    .section
      = render 'statuses/run_failure', :nodes => @nodes
    .section
      %h3 Nodes
      = render 'nodes', :nodes => @nodes
